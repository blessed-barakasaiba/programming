<CustButton@Button>:
    font_size: 32

<CalcGridLayout>:
    id: calculator
    display: equal
    rows: 8
    padding: 5
    spacing: 8

    BoxLayout:
        GridLayout:
            rows: 2 
            padding: 0
            spacing: 0

            TextInput:
                id:entry
                font_size: 40
                multiline: False

            TextInput:
                id:equal
                font_size: 45 
                multiline: False   

    BoxLayout:
        spacing: 8
        CustButton:
            text: '%'
            on_press: entry.text += self.text 
        CustButton:
            text: 'CE'
            on_press: entry.text = ""
        CustButton:
            text: 'C'
            on_press: entry.text = ""
        CustButton:
            text: 'del'
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CustButton:
            text: '1/x'
            on_press: entry.text += self.text 
        CustButton:
            text: '⨯^2'
            on_press: entry.text += self.text 
        CustButton:
            text: 'X2'
            on_press: entry.text += self.text 
        CustButton:
            text: '÷'
            on_press: entry.text += self.text  


    BoxLayout:
        spacing: 8
        CustButton:
            text: '7'
            on_press: entry.text += self.text 
        CustButton:
            text: '8'
            on_press: entry.text += self.text 
        CustButton:
            text: '9'
            on_press: entry.text += self.text 
        CustButton:
            text: 'X'
            on_press: entry.text += self.text

    BoxLayout:
        spacing: 8
        CustButton:
            text: '4'
            on_press: entry.text += self.text 
        CustButton:
            text: '5'
            on_press: entry.text += self.text 
        CustButton:
            text: '6'
            on_press: entry.text += self.text 
        CustButton:
            text: '-'
            on_press: entry.text += self.text   

    BoxLayout:
        spacing: 8
        CustButton:
            text: '1'
            on_press: entry.text += self.text 
        CustButton:
            text: '2'
            on_press: entry.text += self.text 
        CustButton:
            text: '3'
            on_press: entry.text += self.text 
        CustButton:
            text: '+'
            on_press: entry.text += self.text 

    BoxLayout:
        spacing: 8
        CustButton:
            text: '+/-'
            on_press: entry.text += self.text 
        CustButton:
            text: '0'
            on_press: entry.text += self.text 
        CustButton:
            font_size: 40
            text: '.'
            on_press: entry.text += self.text 
        CustButton:
            text: '='
            background_color: [0, 0, 1, 1]
            on_press: calculator.calculate(entry.text)                                                   